root = true

[*]
charset = utf-8
end_of_line = lf
tab_width = 4
indent_size = 4
indent_style = tab
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true
curly_bracket_next_line = false
spaces_around_operators = true

[*.js]
tab_width = 2
indent_size = 2
indent_style = space
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
